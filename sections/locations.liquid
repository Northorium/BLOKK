    },
    {
      "type": "textarea",
      "id": "hours_1",
      "label": "Hours",
      "default": "Man–Fre: 11:00–21:00\nLør: 10:00–21:00\nSøn: 13:00–18:00"
    },
    {
      "type": "color_scheme",
