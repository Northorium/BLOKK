{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .locations-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    width: 100%;
  }

  @media screen and (max-width: 749px) {
    .locations-grid {
      grid-template-columns: 1fr;
    }
  }

  .location-block {
    padding: 52px 24px;
    text-align: center;
  }

  .location-block h2 {
    margin-bottom: 1rem;
  }

  .location-block .location-address {
    margin-bottom: 1.5rem;
  }

  .location-block .location-caption {
    font-size: 0.75rem;
    letter-spacing: 2px;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .location-block .location-hours {
    line-height: 1.8;
  }
{%- endstyle -%}

<div class="locations-grid">
  <div class="location-block color-{{ section.settings.color_scheme_1 }} gradient">
    <h2 class="h1">{{ section.settings.heading_1 }}</h2>
    <div class="location-address">
      <strong>{{ section.settings.name_1 }}</strong><br>
      {{ section.settings.address_1 }}
    </div>
    <div class="location-caption">{{ section.settings.hours_label }}</div>
    <div class="location-hours">
      {{ section.settings.hours_1 | newline_to_br }}
    </div>
  </div>

  <div class="location-block color-{{ section.settings.color_scheme_2 }} gradient">
    <h2 class="h1">{{ section.settings.heading_2 }}</h2>
    <div class="location-address">
      <strong>{{ section.settings.name_2 }}</strong><br>
      {{ section.settings.address_2 }}
    </div>
    <div class="location-caption">{{ section.settings.hours_label }}</div>
    <div class="location-hours">
      {{ section.settings.hours_2 | newline_to_br }}
    </div>
  </div>
</div>

